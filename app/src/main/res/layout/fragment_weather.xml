<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/weather_fragment_up_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_view_current_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="20sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_update_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="right"
                android:layout_marginBottom="10sp"
                android:background="@drawable/update_weather" />

            <TextView
                android:id="@+id/text_view_weather_update_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_color_black" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/weather_fragment_middle_background_color"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_current_day_data"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/weather_fragment_text_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:layout_marginRight="15sp"
                            android:background="@drawable/image_view_pin" />

                        <TextView
                            android:id="@+id/text_view_place_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/weather_fragment_text_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="10sp"
                        android:paddingTop="10sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:layout_marginRight="15sp"
                            android:background="@drawable/image_view_navigation" />

                        <TextView
                            android:id="@+id/text_view_wind"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/weather_fragment_text_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="5">-->

                        <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_vertical|left"-->
                        <!--android:layout_marginRight="15sp"-->
                        <!--android:background="@drawable/image_view_temperature" />-->

                        <!--<TextView-->
                        <!--android:id="@+id/text_view_temperature"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:textColor="@color/weather_fragment_text_color" />-->
                        <!--</LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|left"
                                android:layout_marginRight="15sp"
                                android:background="@drawable/image_view_umbrella" />

                            <TextView
                                android:id="@+id/text_view_humidity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/weather_fragment_text_color" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/text_view_current_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:textColor="@color/weather_fragment_text_color"
                    android:textSize="@dimen/weather_fragment_middle_right_text_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/weather_fragment_bottom_left_background_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_day_data_1"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:gravity="center"
                    android:textColor="@color/weather_fragment_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_view_temperature_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/weather_fragment_text_color"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/weather_fragment_bottom_middle_background_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_day_data_2"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:gravity="center"
                    android:textColor="@color/weather_fragment_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_view_temperature_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/weather_fragment_text_color"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/weather_fragment_bottom_right_background_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_day_data_3"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:gravity="center"
                    android:textColor="@color/weather_fragment_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_view_temperature_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/weather_fragment_text_color"
                    android:textSize="50sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>